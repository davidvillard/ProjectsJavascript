---
import LayoutProyectos from "../layouts/LayoutProyectos.astro";
---

<LayoutProyectos>
  <div class="w-96 mx-auto bg-[#17181a] px-6 py-10 rounded-lg shadow-lg space-y-6">
    <!-- Pantalla de la calculadora -->
    <div class="flex items-center justify-end text-[#FFFFFF] text-right p-5 rounded-lg h-20 text-3xl font-bold bg-transparent border border-none outline-none resize-none">
      <div id="pantalla">0</div>
    </div>

    <!-- Botones de la calculadora -->
    <div class="grid grid-cols-5 bg-[#17181a] text-[#302D32] text-center gap-4 text-lg font-bold">
      <!-- Primera fila -->
      <div class="hover:bg-gray-400 shadow-md py-3 rounded-xl bg-[#222427] text-white">7</div>
      <div class="hover:bg-gray-400 shadow-md py-3 rounded-xl bg-[#222427] text-white">8</div>
      <div class="hover:bg-gray-400 shadow-md py-3 rounded-xl bg-[#222427] text-white">9</div>
      <div class="bg-[#ff9500] text-white hover:bg-[#e68600] shadow-md py-3 rounded-xl">%</div>
      <div class="bg-[#2d191e] text-red-500 hover:bg-gray-600 shadow-md py-3 rounded-xl">C</div>

      <!-- Segunda fila -->
      <div class="hover:bg-gray-400 shadow-md py-3 rounded-xl bg-[#222427] text-white">4</div>
      <div class="hover:bg-gray-400 shadow-md py-3 rounded-xl bg-[#222427] text-white">5</div>
      <div class="hover:bg-gray-400 shadow-md py-3 rounded-xl bg-[#222427] text-white">6</div>
      <div class="bg-[#ff9500] text-white hover:bg-[#e68600] shadow-md py-3 rounded-xl">*</div>
      <div class="bg-[#ff9500] text-white hover:bg-[#e68600] shadow-md py-3 rounded-xl">/</div>

      <!-- Tercera fila -->
      <div class="hover:bg-gray-400 shadow-md py-3 rounded-xl bg-[#222427] text-white">1</div>
      <div class="hover:bg-gray-400 shadow-md py-3 rounded-xl bg-[#222427] text-white">2</div>
      <div class="hover:bg-gray-400 shadow-md py-3 rounded-xl bg-[#222427] text-white">3</div>
      <div class="row-span-2 flex items-center justify-center bg-[#ff9500] text-white hover:bg-[#e68600] shadow-md py-3 rounded-xl">+</div>
      <div class="bg-[#ff9500] text-white hover:bg-[#e68600] shadow-md py-3 rounded-xl">-</div>

      <!-- Cuarta fila -->
      <div class="hover:bg-gray-400 shadow-md py-3 rounded-xl bg-[#222427] text-white">0</div>
      <div class="hover:bg-gray-400 shadow-md py-3 rounded-xl bg-[#222427] text-white">00</div>
      <div class="hover:bg-gray-400 shadow-md py-3 rounded-xl bg-[#222427] text-white">.</div>
      <div class="bg-green-500 text-white hover:bg-green-600 shadow-md py-3 rounded-xl">=</div>
    </div>
  </div>
</LayoutProyectos>

<script src="../scripts/calculadora.js"></script>>

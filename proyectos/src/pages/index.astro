---
import Layout from "../layouts/Layout.astro";

const projects = [
  { id: 1, name: "Cronometro Simple", linkGithub: "https://github.com/davidvillard/ProjectsJavascript", link: "/cronometro/", image: "./proyecto-1.jpg" },
  { id: 2, name: "Calculadora Basica", linkGithub: "https://github.com/davidvillard/ProjectsJavascript", link: "/calculadora/", image: "./proyecto-2.jpg" },
  { id: 3, name: "To-Do List", linkGithub: "https://github.com/davidvillard/ProjectsJavascript", link: "", image: "./javascript-3d.png" },
  { id: 4, name: "Generador de contrase√±as", linkGithub: "https://github.com/davidvillard/ProjectsJavascript", link: "", image: "./javascript-3d.png" },
  { id: 5, name: 'Juego de "Piedra, Papel, o Tijeras"', linkGithub: "https://github.com/davidvillard/ProjectsJavascript", link: "", image: "./javascript-3d.png" },
  { id: 6, name: "Calculadora de Gastos", linkGithub: "https://github.com/davidvillard/ProjectsJavascript", link: "", image: "./javascript-3d.png" },
  { id: 7, name: "Buscador de peliculas", linkGithub: "https://github.com/davidvillard/ProjectsJavascript", link: "", image: "./javascript-3d.png" },
  { id: 8, name: "App de frases inspiradoras", linkGithub: "https://github.com/davidvillard/ProjectsJavascript", link: "", image: "./javascript-3d.png" },
];
---

<Layout>
  <div class="grid grid-cols-2 gap-8 gap-y-32 mt-16 w-full mx-auto max-w-5xl">
    {projects.map((project) => (
      <div class="w-full flex flex-col items-center">
        <img
          class="h-full w-full object-cover rounded-2xl"
          src={project.image}
          alt={`Imagen de ${project.name}`}
        />
        <h3 class="mt-4 text-4xl font-bold tracking-tight text-gray-100 hover:text-[#FFF23E] transition cursor-pointer">{project.name}</h3>
        <div class="flex mt-6 gap-4">
          <a
            href={project.linkGithub}
            class="flex items-center px-3 py-2 text-xs font-semibold text-center text-white bg-black/0 transition border border-white/60 rounded-lg 
            hover:bg-white/20"
            target="_parent"
            rel="noopener noreferrer"
          >
            <svg
              class="w-5 h-5 mr-2"
              fill="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
